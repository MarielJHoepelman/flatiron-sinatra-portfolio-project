<!doctype html>
<html>
  <head>
    <title>Wishable</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <img class="logo" src="/images/Wishable-logo.png" alt="logo" />
      </a>
      <% if Helper.is_logged_in?(session) %>
        <div class="float-right">
          <a class="btn btn-dark" href="/users/logout" role="button">Logout</a>
        </div>
      <% end %>
    </nav>

    <div class="container">
      <% if flash.has?(:message) %>
      <div class="alert alert-primary" role="alert">
        <%= flash[:message] %>
      </div>
      <% end %>
      <%= yield %>
    </div>

    <div class="footer-copyright text-center py-3">Â© 2019 Copyright: created by Mariel Hoepelman
      <a href="https://marielhoepelman.com"> marielhoepelman.com</a>
    </div>
  </body>
</html>
